echo "ğŸ“¦ Stashing unstaged changes..."
git stash push --include-untracked -q
STASH_CREATED=$?
STASH_EMPTY=$(git stash list | wc -l)

trap 'if [ $STASH_CREATED -eq 0 ] && [ $STASH_EMPTY -gt 0 ]; then
  echo "ğŸ”„ Restoring unstaged changes...";
  git stash pop -q || echo "âš ï¸ Failed to restore stash. Please check manually.";
fi' EXIT

echo "ğŸ§ª Running full test suite via pnpm script..."
pnpm test
TEST_STATUS=$?

if [ $TEST_STATUS -eq 0 ]; then
  echo "âœ… All tests passed. Push will proceed."
else
  echo "âŒ Tests failed. Push blocked."
fi

exit $TEST_STATUS
